---
interface Props {
	title: string;
	body: string;
}

const { title, body } = Astro.props;
---

<div class="hover:bg-secondary rounded px-4 py-4 group cursor-pointer transition-all ease-in duration-150">
	<div class="flex gap-2 items-center">
		<h4
			class="text-[#DCE5E2] font-semibold group-hover:font-bold group-hover:pl-2 transition-all ease-in duration-150"
		>
			{title}
		</h4>
		<svg
			xmlns="http://www.w3.org/2000/svg"
			fill="none"
			viewBox="0 0 24 24"
			stroke-width="3"
			stroke="currentColor"
			class="w-4 h-4 text-[#DCE5E2] group-hover:rotate-45 transition-all ease-in duration-150"
		>
			<path
				stroke-linecap="round"
				stroke-linejoin="round"
				d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25"
			>
			</path>
		</svg>
	</div>
	<p>
		{body}
	</p>
</div>
